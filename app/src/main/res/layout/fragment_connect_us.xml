<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.fragment.HomeCycleFragment.ConnectUsFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
<ImageView
    android:id="@+id/logo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:src="@drawable/logo"
    android:layout_marginTop="@dimen/dim_3xl"/>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_4xl"
        android:layout_below="@+id/logo"
        android:layout_marginTop="@dimen/dim_2xl"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
           android:layout_weight="1"
            android:src="@drawable/ic_call_b_black_24dp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_2xl"
            android:paddingTop="@dimen/dim_xl"
            android:text="@string/phonenum"
            />
        <TextView
            android:id="@+id/connectus_fragment_tphonenum"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:textSize="@dimen/txt_size_xl"
            android:textColor="@color/black"
            android:paddingTop="@dimen/dim_xl"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_4xl"
        android:layout_below="@+id/layout"
        android:layout_marginTop="@dimen/dim_2xl"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/connect_us" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:textSize="@dimen/dim_2xl"
            android:paddingTop="@dimen/dim_xl"
            android:textColor="@color/black"
            android:text="@string/user_email"
            />
        <TextView
            android:id="@+id/connectus_fragment_temail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:paddingTop="@dimen/dim_xl"
            android:textSize="@dimen/dim_2xl"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_6xl"
        android:layout_below="@+id/layout1"
        android:gravity="center"
        android:layout_marginTop="@dimen/dim_2xl"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dim_2xl"
            android:src="@drawable/facebook" />

        <ImageView
            android:id="@+id/twitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dim_2xl"
            android:src="@drawable/twitter"
            />
        <ImageView
            android:id="@+id/youtube"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dim_2xl"
            android:src="@drawable/youtube"
            />
        <ImageView
            android:id="@+id/instagram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dim_2xl"
            android:src="@drawable/instagram"
            />
        <ImageView
            android:id="@+id/whatsapp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dim_2xl"
            android:src="@drawable/whatsapp"/>
        <ImageView
            android:id="@+id/google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dim_2xl"
            android:src="@drawable/google"/>
    </LinearLayout>

    <Button
        android:id="@+id/connectus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout2"
        android:layout_marginTop="@dimen/dim_2xl"
        android:background="@color/maven"
        android:text="@string/connectus"
        android:textSize="@dimen/dim_2xl"
        android:textColor="@color/white" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/connectus"
        android:layout_marginStart="@dimen/dim_marg"
        android:layout_marginTop="@dimen/dim_marg"
        android:layout_marginEnd="@dimen/dim_marg"
        android:layout_marginBottom="@dimen/dim_marg"

        android:orientation="vertical">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/connectus_fragment_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_5xl"
            android:background="@drawable/button_background"
            android:gravity="start"
            android:layout_marginBottom="@dimen/dim_2xl"
            android:hint="@string/user_name"
            android:inputType="text"
            android:padding="@dimen/dim_marg"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_l" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/connectus_fragment_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_5xl"
            android:background="@drawable/button_background"
            android:gravity="start"
            android:hint="@string/user_email"
            android:layout_marginBottom="@dimen/dim_2xl"
            android:inputType="text"
            android:padding="@dimen/dim_marg"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_l" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/connectus_fragment_phonenum"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_5xl"
            android:background="@drawable/button_background"
            android:gravity="start"
            android:layout_marginBottom="@dimen/dim_2xl"
            android:hint="@string/phone_num"
            android:inputType="text"
            android:padding="@dimen/dim_marg"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_l" />
        <android.support.design.widget.TextInputEditText
            android:id="@+id/connectus_fragment_tittle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_5xl"
            android:background="@drawable/button_background"
            android:layout_marginBottom="@dimen/dim_2xl"
            android:gravity="start"
            android:hint="@string/title"
            android:inputType="text"
            android:padding="@dimen/dim_marg"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_l" />
        <android.support.design.widget.TextInputEditText
            android:id="@+id/connectus_fragment_massage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_10xl"
            android:background="@drawable/button_background"
            android:gravity="start"
            android:hint="@string/massage"
            android:layout_marginBottom="@dimen/dim_2xl"
            android:inputType="text"
            android:padding="@dimen/dim_marg"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_l" />

        <Button
            android:id="@+id/connectus_fragment_send"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_6xl"
            android:background="@color/maven"
            android:text="@string/send"
            android:textColor="@color/white"
            android:textSize="@dimen/dim_2xl" />



    </LinearLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>