<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim_27xl"
    android:layout_margin="10sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/fragment_post_tittle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:gravity="end"
                android:padding="@dimen/dim_xl"
                android:paddingStart="@dimen/dim_m"
                />


            <ImageView
                android:id="@+id/fragment_post_add_favorite"
                android:layout_width="0dp"
                android:layout_height="@dimen/dim_3xl"
                android:layout_gravity="center|end"
                android:layout_margin="@dimen/dim_m"
                android:layout_weight="2"
                android:background="@color/white"
                android:clickable="true"
                android:src="@drawable/ic_favorite_border_black_24dp" />


        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_sss"
            android:layout_below="@+id/layout"
            android:layout_marginTop="@dimen/dim_ss"
            android:background="@color/gray" />

        <ImageView
            android:id="@+id/fragment_post_image_post"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/view"
            android:layout_margin="@dimen/dim_s" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
