<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/gray"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/back_icon"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center"
        android:layout_weight="1"
        android:visibility="visible">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </RelativeLayout>
    <TextView
        android:id="@+id/tittle"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center"
        android:textColor="@color/maven"
        android:textSize="@dimen/dim_2xl"
        android:layout_weight="8" />

    <RelativeLayout
        android:id="@+id/notf_icon"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="gone">

        <ImageView
            android:id="@+id/notification_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dim_mm"
            android:src="@drawable/notification" />

        <TextView
            android:id="@+id/count_num"
            android:layout_width="@dimen/dim_2xl"
            android:layout_height="@dimen/dim_2xl"
            android:layout_gravity="end|top"
            android:layout_marginTop="@dimen/dim_m"
            android:background="@drawable/notification_count"
            android:gravity="center"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="10sp" />

    </RelativeLayout>
</LinearLayout>

