<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.HomeCycleFragment.PostFragment">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="0dp"
        android:layout_height="@dimen/dim_5xl"
        android:weightSum="10"
        android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/Governoratslayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:background="@drawable/fillter"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/donation_request_fragment_filter_spinner"
            android:layout_width="0dp"
            android:layout_height="@dimen/dim_4xl"
            android:layout_weight="1"
            android:spinnerMode="dropdown" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/donation_request_fragment_search_keyword"
            android:layout_width="0dp"
            android:layout_height="@dimen/dim_4xl"
            android:layout_weight="2"
            android:background="@color/white"
            android:hint="@string/choose_gonvertment" />
    </LinearLayout>
        <LinearLayout
            android:id="@+id/citylayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:layout_margin="@dimen/dim_marg"
            android:background="@drawable/fillter"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/donation_fragment_filter_spinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:spinnerMode="dropdown" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/donation_fragment_search_keyword"
                android:layout_width="0dp"
                android:layout_height="@dimen/dim_5xl"
                android:layout_alignParentEnd="true"
                android:layout_weight="3"
                android:background="@color/white"
                android:hint="@string/choose_city" />
        </LinearLayout>
        <ImageButton
            android:id="@+id/donation_fragment_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/search_background"
            android:src="@drawable/ic_search_black_24dp"
            android:layout_weight="2"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_donation_list_of_donation_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout" />



</RelativeLayout>