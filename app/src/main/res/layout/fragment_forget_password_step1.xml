<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/background"
    tools:context=".ui.fragment.UserCycleFragment.ForgetPasswordStep1Fragment">

    <ImageView
        android:id="@+id/fragment_forget_password_step1_logo"
        android:layout_width="@dimen/dim_20xl"
        android:layout_height="@dimen/dim_20xl"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dim_marg_l"
        android:src="@drawable/logo" />
    <TextView
        android:id="@+id/fragment_forget_password_step1_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/forget_password"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_size_m"
        android:layout_marginTop="@dimen/dim_marg_l"
        android:layout_below="@id/fragment_forget_password_step1_logo"
        />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/fragment_forget_password_step1_phone_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_marg"
        android:layout_marginStart="@dimen/dim_marg_l"
        android:layout_marginEnd="@dimen/dim_marg_l"
        android:padding="@dimen/dim_m"
        android:layout_below="@id/fragment_forget_password_step1_textview"
        android:hint="@string/phone_num"
        android:background="@drawable/shap_ed"
        android:inputType="phone"
        android:textSize="@dimen/txt_size_l" />

    <Button
        android:id="@+id/fragment_forget_password_step1_send_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dim_marg_l"
       android:layout_below="@id/fragment_forget_password_step1_phone_num"
        android:background="@color/login_bnt"
        android:text="@string/send"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_size_l" />


</RelativeLayout>