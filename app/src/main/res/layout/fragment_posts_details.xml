<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.fragment.HomeCycleFragment.PostsDetailsFragment">

    <include layout="@layout/custom_toolbar"
        android:id="@+id/toolbar"

        ></include>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dim_xl"
    android:layout_below="@+id/toolbar">
    <ImageView
        android:id="@+id/posts_details_fragment_imagepost"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_10xl"
        android:layout_marginStart="@dimen/dim_2xl"
        android:layout_marginEnd="@dimen/dim_2xl"
        android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:layout_below="@+id/posts_details_fragment_imagepost"
        android:layout_marginStart="@dimen/dim_2xl"
        android:layout_marginTop="@dimen/dim_2xl"
        android:layout_marginEnd="@dimen/dim_2xl"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/posts_details_fragment_tittle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:padding="@dimen/dim_xl"
            android:paddingStart="@dimen/dim_m" />

        <ImageView
            android:id="@+id/posts_details_fragment_add_favorite"
            android:layout_width="0dp"
            android:layout_height="@dimen/dim_3xl"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:background="@color/white"
            android:clickable="true"
            android:src="@drawable/ic_favorite_border_black_24dp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_sss"
        android:background="@color/black"
        android:layout_marginTop="@dimen/dim_s"
        android:layout_below="@+id/layout" />
    <TextView
        android:id="@+id/posts_details_fragment_details"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_50xl"
        android:background="@color/white"
        android:layout_margin="@dimen/dim_2xl"
        android:layout_below="@+id/layout"
        />


</RelativeLayout>

</RelativeLayout>